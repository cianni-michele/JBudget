<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/style.css">
    <left>
        <VBox prefWidth="200.0" spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button fx:id="movementsButton" text="Movements" styleClass="sidebar-button"/>
            <Button fx:id="budgetsButton" text="Budgets" styleClass="sidebar-button"/>
            <Button fx:id="statisticsButton" text="Statistics" styleClass="sidebar-button"/>
            <Button fx:id="categoriesButton" text="Categories" styleClass="sidebar-button"/>
        </VBox>
    </left>
</BorderPane>